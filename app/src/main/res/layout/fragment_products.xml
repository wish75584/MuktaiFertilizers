<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ProductsFragment"
    android:background="#fff"
    android:clickable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/new_crown_normal_demo"
                android:text="Products"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="25sp"
                android:textStyle="bold" />

            <FrameLayout
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/vector_bg_frame"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/bio_fertilizers"
                    android:layout_gravity="center"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/bio_fertilizer" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="60dp"
                    android:text="Bio Fertilizers"
                    android:textAlignment="center"
                    android:padding="5dp"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/vector_bg_frame"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/bio_pesticides"
                    android:layout_gravity="center"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:src="@drawable/bio_pesticides" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="60dp"
                    android:text="Bio Pesticides "
                    android:textAlignment="center" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/vector_bg_frame"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/micro_nutri"
                    android:layout_gravity="center"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/micro" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="60dp"
                    android:text="Micro Nutrients"
                    android:textAlignment="center" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/vector_bg_frame"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/straight_fertilizers"
                    android:layout_gravity="center"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/straight_fertilizer" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="60dp"
                    android:text="Straight Fertilizers"
                    android:textAlignment="center" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/vector_bg_frame"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/organic_fertilizers"
                    android:layout_gravity="center"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:src="@drawable/seed_bag" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="70dp"
                    android:text="Organic\nFertilizers"
                    android:textAlignment="center" />
            </FrameLayout>


        </LinearLayout>

    </RelativeLayout>
</ScrollView>